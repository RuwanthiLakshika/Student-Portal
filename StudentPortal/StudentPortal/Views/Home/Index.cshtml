@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px 0;
            color: white;
        }

        .content-container {
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            padding: 35px;
            margin-top: 40px;
            backdrop-filter: blur(10px);
            color: #333;
        }

        .welcome-title {
            color: #3b71ca;
            font-weight: 600;
            margin-bottom: 25px;
            position: relative;
            padding-bottom: 15px;
        }

            .welcome-title:after {
                content: '';
                position: absolute;
                left: 50%;
                transform: translateX(-50%);
                bottom: 0;
                height: 3px;
                width: 80px;
                background-color: #3b71ca;
            }

        .feature-card {
            border-radius: 10px;
            background-color: white;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
            height: 100%;
        }

            .feature-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            }

        .feature-icon {
            font-size: 2.5rem;
            color: #3b71ca;
            margin-bottom: 15px;
        }

        .btn-primary {
            background-color: #3b71ca;
            border-color: #3b71ca;
            padding: 12px 30px;
            font-weight: 500;
            border-radius: 8px;
            transition: all 0.3s ease;
            margin-top: 20px;
        }

            .btn-primary:hover {
                background-color: #2a5298;
                border-color: #2a5298;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(59, 113, 202, 0.3);
            }

        a {
            color: #3b71ca;
            text-decoration: none;
            transition: color 0.2s;
        }

            a:hover {
                color: #2a5298;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="content-container text-center">
                    <h1 class="welcome-title display-4">Welcome to Student Portal</h1>
                    <p class="lead mb-5">Manage your students with our modern, easy-to-use interface</p>

                    <div class="row g-4 mt-3">
                        <div class="col-md-4">
                            <div class="feature-card p-4">
                                <div class="feature-icon">📝</div>
                                <h3>Register</h3>
                                <p>Add new students to your database with streamlined registration form.</p>
                                <a href="/Students/Add" class="btn btn-primary">Add Student</a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="feature-card p-4">
                                <div class="feature-icon">📊</div>
                                <h3>Manage</h3>
                                <p>View, edit, and organize your student records all in one place.</p>
                                <a href="/Students/List" class="btn btn-primary">View Students</a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="feature-card p-4">
                                <div class="feature-icon">📈</div>
                                <h3>Report</h3>
                                <p>Generate insights and reports based on your student data.</p>
                                <a href="/Reports" class="btn btn-primary">View Reports</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>